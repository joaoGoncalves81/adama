@model CatalogItemViewModel


<form asp-page="/Basket/Index" method="post">

    <a asp-page="/Product/Index" asp-route-id="@Model.ProductSlug">
        <img class="esh-catalog-thumbnail" src="@Model.PictureUri" alt="@Model.CatalogItemName - Presentes Personalizados - Dama no Jornal&reg;" />
    </a>
    <input class="esh-catalog-button" type="submit" value="ADICIONAR" />

    <div class="esh-catalog-name">
        <span>@Html.Raw(Model.CatalogItemName.Replace("-","<br>"))</span>
    </div>
    <div class="esh-catalog-price">
        <span>@Model.Price.ToString("N2")</span>
    </div>
