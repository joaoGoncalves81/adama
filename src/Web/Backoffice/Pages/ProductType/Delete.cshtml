@page
@model Backoffice.Pages.ProductType.DeleteModel

@{
    ViewData["Title"] = "Remover";
}

<h2>Remover</h2>

<h3>Tem a certeza que quer apagar o registo?</h3>
<div>
    <h4>Tipo de Produto</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ProductTypeModel.Code)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ProductTypeModel.Code)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ProductTypeModel.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ProductTypeModel.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ProductTypeModel.Slug)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ProductTypeModel.Slug)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ProductTypeModel.CategoriesName)
        </dt>
        <dd>
            @string.Join(", ", Model.ProductTypeModel.CategoriesName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ProductTypeModel.PictureUri)
        </dt>
        <dt>
            @Html.DisplayNameFor(model => model.ProductTypeModel.DeliveryTimeMin)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ProductTypeModel.DeliveryTimeMin)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ProductTypeModel.DeliveryTimeMax)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ProductTypeModel.DeliveryTimeMax)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ProductTypeModel.DeliveryTimeUnit)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ProductTypeModel.DeliveryTimeUnit)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ProductTypeModel.Price)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ProductTypeModel.Price)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ProductTypeModel.AdditionalTextPrice)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ProductTypeModel.AdditionalTextPrice)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ProductTypeModel.ShippingCost)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ProductTypeModel.ShippingCost)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ProductTypeModel.MetaDescription)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ProductTypeModel.MetaDescription)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ProductTypeModel.Title)
        </dt>
        <dd>
            @(!string.IsNullOrEmpty(Model.ProductTypeModel.Title) ? Model.ProductTypeModel.Title : Model.ProductTypeModel.Description)
        </dd>
        <dd>
            <img src="@Model.ProductTypeModel.PictureUri" class="img-responsive" />
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="ProductTypeModel.Id" />
        <input type="submit" value="Remover" class="btn btn-default" /> |
        <a asp-page="./Index">Voltar para a lista</a>
    </form>
</div>
