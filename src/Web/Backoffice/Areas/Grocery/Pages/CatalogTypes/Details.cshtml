@model Backoffice.Areas.Grocery.Pages.CatalogTypes.DetailsModel

@{
    ViewData["Title"] = "Detalhes";
}

<h2>Sabor com Tradição - Detalhes</h2>

<div>
    <h4>Tipo de Produto</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Código
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CatalogType.Code)
        </dd>
