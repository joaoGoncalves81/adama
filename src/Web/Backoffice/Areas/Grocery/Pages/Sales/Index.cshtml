@page
@model Backoffice.Areas.Grocery.Pages.Sales.IndexModel
@{
    ViewData["Title"] = "Encomendas Mercado";
}
<div class="row">
    <div class="col-xs-6">
        <h2>Encomendas Mercado</h2>
    </div>
</div>
<table class="table table-pagination">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrdersModel[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrdersModel[0].OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrdersModel[0].BuyerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrdersModel[0].CustomerEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrdersModel[0].ItemsCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrdersModel[0].BillingToAddress)
            </th>            
            <th>
                @Html.DisplayNameFor(model => model.OrdersModel[0].Total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrdersModel[0].OrderState)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrdersModel[0].SalesInvoiceNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrdersModel[0].SalesPaymentId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrdersModel)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td class="text-nowrap">
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BuyerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemsCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BillingToAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderState)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalesInvoiceNumber)
            </td>
            <td>
                @(item.SalesPaymentId.HasValue? "Sim" : "Não")
            </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.Id">Detalhe</a>
            </td>
        </tr>
        }
    </tbody>
</table>

