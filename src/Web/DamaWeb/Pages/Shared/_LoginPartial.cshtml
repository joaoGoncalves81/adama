@using Microsoft.AspNetCore.Identity

@if (Context.User.Identity.IsAuthenticated)
{
    <li class="nav-item list-inline-item">
        <a class="nav-link dnj-identity-item px-0 px-sm-3"
           asp-page="/Order/Index">
            <i class="fas fa-shopping-bag fa-lg"></i>
            <span class="d-none d-sm-inline">Minhas Encomendas</span>
        </a>
    </li>
    <li class="nav-item list-inline-item">
        <a class="nav-link dnj-identity-item px-0 px-sm-3"
           asp-page="/Account/Manage/Index">
            <i class="fas fa-user fa-lg"></i>
            <span class="d-none d-sm-inline">Minha Conta</span>
        </a>
    </li>
    <li class="nav-item list-inline-item">
        <form asp-controller="Account" asp-action="Logout" method="post"
              id="logoutForm">
            <a class="nav-link dnj-identity-item px-0 px-sm-3"
               href="javascript:document.getElementById('logoutForm').submit()">
                <i class="fas fa-sign-out-alt fa-lg"></i>
                <span class="d-none d-sm-inline">Sair</span>
            </a>
        </form>
    </li>
    <li class="list-inline-item">
        @await Component.InvokeAsync("Basket")
    </li>
}
else
{
    <li class="nav-item list-inline-item">
        <a asp-page="/Account/Signin" class="nav-link px-0 px-sm-3">
            <i class="fas fa-user fa-lg"></i>
            <span class="d-none d-sm-inline">Entrar</span>
        </a>
    </li>
    <li class="list-inline-item">
        @await Component.InvokeAsync("Basket")
    </li>
}
