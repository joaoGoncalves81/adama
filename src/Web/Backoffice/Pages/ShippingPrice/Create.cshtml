@page
@model Backoffice.Pages.ShippingPrice.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Novo</h2>

<h4>Relação Preço/Peso</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ShippingPriceWeight.MinWeight" class="control-label"></label>
                <input asp-for="ShippingPriceWeight.MinWeight" class="form-control" />
                <span asp-validation-for="ShippingPriceWeight.MinWeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShippingPriceWeight.MaxWeight" class="control-label"></label>
                <input asp-for="ShippingPriceWeight.MaxWeight" class="form-control" />
                <span asp-validation-for="ShippingPriceWeight.MaxWeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShippingPriceWeight.Price" class="control-label"></label>
                <input asp-for="ShippingPriceWeight.Price" class="form-control decimal" />
                <span asp-validation-for="ShippingPriceWeight.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Voltar para a Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
