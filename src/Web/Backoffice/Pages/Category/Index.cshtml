@page
@model Backoffice.Pages.Category.IndexModel

@{
    ViewData["Title"] = "Categorias";
}

<h2>Categorias</h2>

<p>
    <a asp-page="Create">Nova Categoria</a>
</p>
<table class="table table-pagination">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Categories[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categories[0].Order)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categories[0].ParentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categories[0].MetaDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categories[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categories[0].NrTypeProducts)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Categories) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Parent.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MetaDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NrTypeProducts)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Remover</a>
            </td>
        </tr>
}
    </tbody>
</table>
