@page
@model Backoffice.Pages.ProductType.IndexModel

@{
    ViewData["Title"] = "Tipos de Produtos";
}

<h2>Tipos de Produtos</h2>

<p>
    <a asp-page="Create">Novo Tipo de Produto</a>
</p>
<table class="table table-pagination">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductTypesModel[0].Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductTypesModel[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductTypesModel[0].CategoriesName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductTypesModel[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductTypesModel[0].AdditionalTextPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductTypesModel[0].DeliveryTimeMin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductTypesModel[0].DeliveryTimeMax)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductTypesModel[0].DeliveryTimeUnit)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ProductTypesModel) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @string.Join(",", item.CategoriesName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdditionalTextPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeliveryTimeMin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeliveryTimeMax)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeliveryTimeUnit)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Detalhe</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Remover</a>
            </td>
        </tr>
}
    </tbody>
</table>
