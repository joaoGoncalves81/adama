@page
@model Backoffice.Pages.Products.EditModel

@{
    ViewData["Title"] = "Editar";
}

<h2>Editar</h2>

<h4>Produto</h4>
<hr />
<form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="ProductModel.Sku" type="hidden" />
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="ProductModel.Name" class="control-label"></label>
                <input asp-for="ProductModel.Name" class="form-control" />
                <span asp-validation-for="ProductModel.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductModel.Description" class="control-label"></label>
                <input asp-for="ProductModel.Description" class="form-control" />
                <span asp-validation-for="ProductModel.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductModel.CatalogTypeId" class="control-label"></label>
                <select asp-for="ProductModel.CatalogTypeId" class="form-control" asp-items="ViewBag.ProductTypeId"></select>
                <span asp-validation-for="ProductModel.CatalogTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductModel.CatalogIllustrationId" class="control-label"></label>
                <select asp-for="ProductModel.CatalogIllustrationId" class="form-control" asp-items="ViewBag.IllustrationId"></select>
                <span asp-validation-for="ProductModel.CatalogIllustrationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductModel.Price" class="control-label"></label>
                <input asp-for="ProductModel.Price" class="form-control decimal" />
                <span asp-validation-for="ProductModel.Price" class="text-danger"></span>
            </div>
            <div class="form-check">
                <input asp-for="ProductModel.ShowOnShop" class="form-check-input" />
                <label asp-for="ProductModel.ShowOnShop" class="form-check-label"></label>
                <span asp-validation-for="ProductModel.ShowOnShop" class="text-danger"></span>
            </div>
            <div class="form-check">
                <input asp-for="ProductModel.IsNew" class="form-check-input" />
                <label asp-for="ProductModel.IsNew" class="form-check-label"></label>
                <span asp-validation-for="ProductModel.IsNew" class="text-danger"></span>
            </div>
            <div class="form-check">
                <input asp-for="ProductModel.IsFeatured" class="form-check-input" />
                <label asp-for="ProductModel.IsFeatured" class="form-check-label"></label>
                <span asp-validation-for="ProductModel.IsFeatured" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductModel.Picture" class="control-label"></label>
                <input type="file" asp-for="ProductModel.Picture" class="form-control" />
                <small>(quadrado)</small>
                <span asp-validation-for="ProductModel.Picture" class="text-danger"></span>
                <img src="@Model.ProductModel.PictureUri" class="img-responsive" />
                <input type="hidden" asp-for="ProductModel.PictureUri" />
            </div>
        </div>
        <div class="col-md-6">
            <h4>Atributos do Produto</h4>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ProductModel.CatalogAttributes[0].Type)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ProductModel.CatalogAttributes[0].Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ProductModel.CatalogAttributes[0].Price)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ProductModel.CatalogAttributes[0].ReferenceCatalogItem)
                        </th>
                        <th>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.ProductModel?.CatalogAttributes?.Count > 0)
                    {
                        for (int i = 0; i < Model.ProductModel.CatalogAttributes.Count; i++)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(model => Model.ProductModel.CatalogAttributes[i].Type)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => Model.ProductModel.CatalogAttributes[i].Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => Model.ProductModel.CatalogAttributes[i].Price)
                                </td>
                                <td>
                                    <a asp-page="/Products/Edit" asp-route-id="@Model.ProductModel.CatalogAttributes[i].ReferenceCatalogItemId"> @Html.DisplayFor(modelItem => Model.ProductModel.CatalogAttributes[i].ReferenceCatalogItem.Name) </a>
                                </td>
                                <td>
                                    <a asp-page="./Attributes/Edit" asp-route-id="@Model.ProductModel.CatalogAttributes[i].Id" onclick="return confirm('A menina gravou?');">Editar</a> |
                                    <a asp-page="./Attributes/Delete" asp-route-id="@Model.ProductModel.CatalogAttributes[i].Id" onclick="return confirm('A menina gravou?');">Apagar</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="6">
                            <a asp-page="./Attributes/Create" asp-route-id="@Model.ProductModel.Id" class="btn btn-default" onclick="return confirm('A menina gravou?');">Novo Produto</a>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
        <div class="col-md-4">
            <h4>Categorias</h4>
            <ul>
                @for (int i = 0; i < Model.CatalogCategoryModel.Count; i++)
                {
                    <li class="parent-category">
                        <label asp-for="CatalogCategoryModel[i].Selected">
                            <input type="hidden" asp-for="CatalogCategoryModel[i].Id" />
                            <input type="hidden" asp-for="CatalogCategoryModel[i].CategoryId" />
                            <input type="checkbox" asp-for="CatalogCategoryModel[i].Selected" class="parent-checkbox" />
                            @Model.CatalogCategoryModel[i].Label
                        </label>

                        @if (Model.CatalogCategoryModel[i].Childs.Count > 0)
                        {
                            <ul>
                                @for (int j = 0; j < Model.CatalogCategoryModel[i].Childs.Count; j++)
                                {
                                    <li>
                                        <label asp-for="CatalogCategoryModel[i].Childs[j].Selected">
                                            <input type="hidden" asp-for="CatalogCategoryModel[i].Childs[j].Id" />
                                            <input type="hidden" asp-for="CatalogCategoryModel[i].Childs[j].CategoryId" />
                                            <input type="checkbox" asp-for="CatalogCategoryModel[i].Childs[j].Selected" class="child-checkbox" />
                                            @Model.CatalogCategoryModel[i].Childs[j].Label
                                        </label>
                                    </li>
                                }
                            </ul>
                        }
                    </li>
                }
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <hr />
            <h4>Imagens do Produto</h4>
            @for (int i = 0; i < Model.ProductModel.CatalogPictures.Count; i++)
            {
                <input type="hidden" asp-for="ProductModel.CatalogPictures[i].Id" />
                <input type="hidden" asp-for="ProductModel.CatalogPictures[i].CatalogItemId" />
                <input type="hidden" asp-for="ProductModel.CatalogPictures[i].PictureUri" />
                <div class="col-md-3">
                    <img src="@Model.ProductModel.CatalogPictures[i].PictureUri" class="img-responsive" />
                    <div class="form-check">
                        <input asp-for="ProductModel.CatalogPictures[i].IsActive" class="form-check-input" />
                        <label asp-for="ProductModel.CatalogPictures[i].IsActive" class="form-check-label"></label>
                        <span asp-validation-for="ProductModel.CatalogPictures[i].IsActive" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="ProductModel.CatalogPictures[i].Order" class="col-md-3 control-label"></label>
                        <div class="col-md-4">
                            <input asp-for="ProductModel.CatalogPictures[i].Order" class="form-control" />
                            <span asp-validation-for="ProductModel.CatalogPictures[i].Order" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <button class="btnChangeImage btn btn-default">Substituir</button>
                        <input type="submit" asp-page-handler="RemovePicture" value="Remover" class="btnRemoveImage btn btn-danger" />
                        <input type="file" asp-for="ProductModel.CatalogPictures[i].Picture" class="form-control sr-only" />
                        <input type="hidden" asp-for="ProductModel.CatalogPictures[i].ToRemove" class="img-to-remove" />
                        <p class="alert" role="alert"></p>
                    </div>
                </div>
            }
            <div class="col-md-12">
                <div class="form-group">
                    <label class="control-label">Carregar novas imagens</label>
                    <input asp-for="ProductModel.OtherPictures" class="form-control" />
                    <span asp-validation-for="ProductModel.OtherPictures" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group">
            <input type="hidden" asp-for="ProductModel.Id" />
            <input type="submit" asp-page-handler="Save" value="Gravar" class="btn btn-primary" />
        </div>
    </div>

</form>


<div>
    <a asp-page="./Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            $('.remove').on('click', function (e) {
                e.preventDefault();
                var tr = $(this).closest('tr');
                tr.find('.to-remove').val(true);
                tr.hide();
            });
            $('.btnChangeImage').on('click', function (e) {
                e.preventDefault();
                var elem = $(this).siblings('input[type=file]');
                elem.click();
                $(this).siblings('p').addClass('alert-warning').text('Imagem vai ser substituida!');
            });
            $('.btnRemoveImage').on('click', function (e) {
                e.preventDefault();
                $(this).siblings('p').addClass('alert-danger').text('Imagem vai ser removida!');
                $(this).siblings('.img-to-remove').val(true);
            });
            $('.child-checkbox').click(function () {
                if ($(this).is(":checked")) {
                    $(this).closest('.parent-category').find('.parent-checkbox').prop('checked', true);
                }
            });
        });
    </script>
}
