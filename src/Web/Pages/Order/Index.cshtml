@page
@using System.Linq;
@model IndexModel
@{ 
    ViewData["Title"] = "As Minhas Encomendas";
}

<div class="esh-orders">
    <div class="container">
        <h2>@ViewData["Title"]</h2>
        <article class="esh-orders-titles row">
            <section class="esh-orders-title col-2">Nº Encomenda</section>
            <section class="esh-orders-title col-4">Data</section>
            <section class="esh-orders-title col-2">Total</section>
            <section class="esh-orders-title col-2">Estado</section>
            <section class="esh-orders-title col-2"></section>
        </article>
        @if (Model.Orders != null && Model.Orders.Any())
        {
            @foreach (var item in Model.Orders)
            {
                <article class="esh-orders-items row">
                    <section class="esh-orders-item col-2">@Html.DisplayFor(modelItem => item.OrderNumber)</section>
                    <section class="esh-orders-item col-4">@Html.DisplayFor(modelItem => item.OrderDate)</section>
                    <section class="esh-orders-item col-2">€ @Html.DisplayFor(modelItem => item.Total)</section>
                    <section class="esh-orders-item col-2">@Html.DisplayFor(modelItem => item.Status)</section>
                    <section class="esh-orders-item col-1">
                        <a class="esh-orders-link" asp-page="Detail" asp-route-orderId="@item.OrderNumber">Detalhe</a>
                    </section>
                    <section class="esh-orders-item col-1">
                        @if (item.Status.ToLower() == "pending")
                        {
                            <a class="esh-orders-link" asp-page="Cancel" asp-route-orderId="@item.OrderNumber">Cancelar</a>
                        }
                    </section>
                </article>
            }
        }
    </div>
</div>
