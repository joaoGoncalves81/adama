@page
@model Backoffice.Pages.Stock.IndexModel
@{
    ViewData["Title"] = "Stock";
}

<h2>Atualização de Stock</h2>

<form class="form-inline">
    <div class="form-group">
        <label asp-for="CatalogCategoryId"></label>
        <select class="form-control" asp-for="CatalogCategoryId" asp-items="ViewBag.CategoryList">
            <option>Todas</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="CatalogTypeId"></label>
        <select class="form-control" asp-for="CatalogTypeId" asp-items="ViewBag.CatalogTypeList">
            <option>Todos</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="CatalogIllustrationId"></label>
        <select class="form-control" asp-for="CatalogIllustrationId" asp-items="ViewBag.IllustrationList">
            <option>Todas</option>
        </select>
    </div>
    <button type="submit" class="btn btn-default">Filtrar</button>
</form>

<form method="post">
    <table class="table table-responsive">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Stocks[0].Category)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Stocks[0].CatalogType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Stocks[0].Illustration)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Stocks[0].Attribute)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Stocks[0].Stock)
                </th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Stocks.Count; i++)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Stocks[i].Category)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Stocks[i].CatalogType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Stocks[i].Illustration)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Stocks[i].Attribute)
                    </td>
                    <td>
                        <input type="hidden" asp-for="Stocks[i].CatalogItemId" />
                        <input type="hidden" asp-for="Stocks[i].CatalogAttributeId" />
                        <input asp-for="Stocks[i].Stock" class="form-control" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-default">Gravar</button>
</form>