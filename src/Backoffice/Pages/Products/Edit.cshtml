@page
@model Backoffice.Pages.Products.EditModel

@{
    ViewData["Title"] = "Editar";
}

<h2>Editar</h2>

<h4>Produto</h4>
<hr />
<form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="ProductModel.Name" class="control-label"></label>
                <input asp-for="ProductModel.Name" class="form-control" />
                <span asp-validation-for="ProductModel.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductModel.Description" class="control-label"></label>
                <input asp-for="ProductModel.Description" class="form-control" />
                <span asp-validation-for="ProductModel.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductModel.CatalogTypeId" class="control-label"></label>
                <select asp-for="ProductModel.CatalogTypeId" class="form-control" asp-items="ViewBag.ProductTypeId"></select>
                <span asp-validation-for="ProductModel.CatalogTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductModel.CatalogIllustrationId" class="control-label"></label>
                <select asp-for="ProductModel.CatalogIllustrationId" class="form-control" asp-items="ViewBag.IllustrationId"></select>
                <span asp-validation-for="ProductModel.CatalogIllustrationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductModel.Price" class="control-label"></label>
                <input asp-for="ProductModel.Price" class="form-control decimal" />
                <span asp-validation-for="ProductModel.Price" class="text-danger"></span>
            </div>
            <div class="form-check">
                <input asp-for="ProductModel.ShowOnShop" class="form-check-input" />
                <label asp-for="ProductModel.ShowOnShop" class="form-check-label"></label>
                <span asp-validation-for="ProductModel.ShowOnShop" class="text-danger"></span>
            </div>
            <div class="form-check">
                <input asp-for="ProductModel.IsNew" class="form-check-input" />
                <label asp-for="ProductModel.IsNew" class="form-check-label"></label>
                <span asp-validation-for="ProductModel.IsNew" class="text-danger"></span>
            </div>
            <div class="form-check">
                <input asp-for="ProductModel.IsFeatured" class="form-check-input" />
                <label asp-for="ProductModel.IsFeatured" class="form-check-label"></label>
                <span asp-validation-for="ProductModel.IsFeatured" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductModel.Picture" class="control-label"></label>
                <input type="file" asp-for="ProductModel.Picture" class="form-control" />
                <small>(quadrado)</small>
                <span asp-validation-for="ProductModel.Picture" class="text-danger"></span>
                <img src="@Model.ProductModel.PictureUri" class="img-responsive" />
                <input type="hidden" asp-for="ProductModel.PictureUri" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <hr />
            <h4>Atributos do Produto</h4>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ProductModel.CatalogAttributes[0].Type)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ProductModel.CatalogAttributes[0].Code)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ProductModel.CatalogAttributes[0].Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ProductModel.CatalogAttributes[0].Price)
                        </th>
                        <th>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.ProductModel?.CatalogAttributes?.Count > 0)
                    {
                        for (int i = 0; i < Model.ProductModel.CatalogAttributes.Count; i++)
                        {
                            <tr>
                                <td>
                                    <input type="hidden" asp-for="ProductModel.CatalogAttributes[i].Id" />
                                    <input type="hidden" asp-for="ProductModel.CatalogAttributes[i].CatalogItemId" />
                                    <input type="hidden" asp-for="ProductModel.CatalogAttributes[i].ToRemove" class="to-remove" />
                                    @*<input type="hidden" asp-for="ProductModel.CatalogAttributes[i].Type" value="@Model.ProductModel.CatalogAttributes[i].Type" />*@
                                    <select asp-for="ProductModel.CatalogAttributes[i].Type" asp-items="Html.GetEnumSelectList<ApplicationCore.Entities.CatalogAttributeType>()" class="form-control" ></select>
                                    <span asp-validation-for="ProductModel.CatalogAttributes[i].Type" class="text-danger"></span>
                                </td>
                                <td>
                                    <input asp-for="ProductModel.CatalogAttributes[i].Code" class="form-control" value="@Model.ProductModel.CatalogAttributes[i].Code" />
                                    <span asp-validation-for="ProductModel.CatalogAttributes[i].Code" class="text-danger"></span>
                                </td>
                                <td>
                                    <input asp-for="ProductModel.CatalogAttributes[i].Name" class="form-control" value="@Model.ProductModel.CatalogAttributes[i].Name" />
                                    <span asp-validation-for="ProductModel.CatalogAttributes[i].Name" class="text-danger"></span>
                                </td>
                                <td>
                                    <input asp-for="ProductModel.CatalogAttributes[i].Price" class="form-control decimal" value="@Model.ProductModel.CatalogAttributes[i].Price" />
                                    <span asp-validation-for="ProductModel.CatalogAttributes[i].Price" class="text-danger"></span>
                                </td>
                                <td>
                                    <button type="button" class="btn btn-danger remove">Remover</button>
                                </td>
                            </tr>
                        }
                    }

                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="4">
                            <input type="submit" asp-page-handler="AddAttribute" value="Adicionar Atributo" class="btn btn-default" />
                        </td>
                    </tr>
                </tfoot>
            </table>
            <div class="form-group">
                <input type="hidden" asp-for="ProductModel.Id" />
                <input type="submit" asp-page-handler="Save" value="Gravar" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>


<div>
    <a asp-page="./Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            $('.remove').on('click', function (e) {
                e.preventDefault();
                var tr = $(this).closest('tr');
                tr.find('.to-remove').val(true);               
                tr.hide();
            });
        });
    </script>
}
