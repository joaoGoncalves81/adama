<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:DamaSalesApp"
             x:Class="DamaSalesApp.MainPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Spacing="10" Padding="5">
            <RelativeLayout VerticalOptions="Start" HorizontalOptions="Center" >
                <StackLayout Padding="50" Orientation="Vertical">
                    <Image Aspect="AspectFit" Source="http://via.placeholder.com/150x150" />
                    <Label  VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" Text="Dama no Jornal"></Label>
                </StackLayout>
            </RelativeLayout>
            <RelativeLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" >
                <StackLayout Orientation="Horizontal">
                    <Button Text="Vendas" FontSize="Large" Clicked="Sales_Clicked" TextColor="White" BackgroundColor="LightSeaGreen" HeightRequest="100" WidthRequest="200"/>
                    <Button Text="Encomendas" FontSize="Large" Clicked="Orders_Clicked" TextColor="White" BackgroundColor="LightSeaGreen" HeightRequest="100" WidthRequest="200"/>
                </StackLayout>
            </RelativeLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>