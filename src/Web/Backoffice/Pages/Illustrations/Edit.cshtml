@page
@model Backoffice.Pages.Illustrations.EditModel

@{
    ViewData["Title"] = "Editar";
}

<h2>Editar</h2>

<h4>Ilustração</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group required">
                <label asp-for="IllustrationModel.Code" class="control-label"></label>
                <input asp-for="IllustrationModel.Code" class="form-control" />
                <span asp-validation-for="IllustrationModel.Code" class="text-danger"></span>
            </div>
            <div class="form-group required">
                <label asp-for="IllustrationModel.Name" class="control-label"></label>
                <input asp-for="IllustrationModel.Name" class="form-control" />
                <span asp-validation-for="IllustrationModel.Name" class="text-danger"></span>
            </div>
            <div class="form-group required">
                <label asp-for="IllustrationModel.IllustrationTypeId" class="control-label"></label>
                <div class="text-nowrap">
                    <select asp-for="IllustrationModel.IllustrationTypeId" asp-items="ViewBag.IllustrationTypes" class="form-control col-md-10"></select>
                    <span asp-validation-for="IllustrationModel.IllustrationTypeId" class="text-danger"></span>
                    <button type="submit" class="btn btn-default" asp-page-handler="RefreshTypes"><i class="fa fa-refresh" aria-hidden="true"></i></button>
                </div>
                <a asp-page="../IllustrationTypes/Create" target="_blank">Criar Novo Tipo</a> |
                <a asp-page="../IllustrationTypes/Index" target="_blank">Editar Tipos</a>
            </div>
            <div class="form-check">
                <input asp-for="IllustrationModel.InMenu" class="form-check-input" />
                <label asp-for="IllustrationModel.InMenu" class="form-check-label"></label>
                <span asp-validation-for="IllustrationModel.InMenu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IllustrationModel.IllustrationImage" class="control-label"></label>

                <input type="file" asp-for="IllustrationModel.IllustrationImage" class="form-control" />
                <span asp-validation-for="IllustrationModel.IllustrationImage" class="text-danger"></span>
                @if (!String.IsNullOrEmpty(Model.IllustrationModel.ImageBase64))
                {
                 <img src="@Model.IllustrationModel.ImageBase64" class="img-thumbnail" />
                }

            </div>
            
            <input type="hidden" asp-for="IllustrationModel.Id" />
            <div class="form-group">
                <input type="submit" value="Gravar" class="btn btn-default" asp-page-handler="Save"  />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
