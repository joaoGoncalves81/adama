@page
@model Backoffice.Areas.Grocery.Pages.Products.IndexModel

@{
    ViewData["Title"] = "Sabor com Tradição";
}

<h2>Sabor com Tradição - Produtos</h2>

<p>
    <a asp-page="Create">Criar novo produto</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>
                @Html.DisplayNameFor(model => model.CatalogItem[0].Sku)
            </th>
            <th>
               Nome
            </th>
            <th>
                Preço
            </th>
            <th>
                Categorias
            </th>
            <th>
                Tipo de Produto
            </th>
            <th>
               Ativo
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.CatalogItem) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sku)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @string.Join(",",item.CatalogCategories.Select(x => x.Category.Name))
            </td>
            <td>
                @($"{item.CatalogType.Code} - {item.CatalogType.Description}")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShowOnShop)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Remover</a>
            </td>
        </tr>
}
    </tbody>
</table>
