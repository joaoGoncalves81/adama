@page
@model Backoffice.Areas.Grocery.Pages.Categories.DeleteModel

@{
    ViewData["Title"] = "Apagar";
}

<h2>Apagar</h2>

<h3>Tem a certeza que quer remover este registo?</h3>
<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nome
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
        <dt>
            Ordem
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Category.Order)
        </dd>
        <dt>
            Categoria Pai
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Category.Parent.Name)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Category.Id" />
        <input type="submit" value="Apagar" class="btn btn-default" /> |
        <a asp-page="./Index">Voltar para a Lista</a>
    </form>
</div>
